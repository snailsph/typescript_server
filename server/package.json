{
  "name": "typescript_server",
  "version": "1.0.0",
  "description": "typescript koa nodejs ",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "rm -rf dist && tsc -w",
    "clean": "rm -rf node_modules coverage dist .nyc_output",
    "coverage": "nyc --exclude dist/test --reporter=html npm run test:all",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.test.ts'",
    "start": "node dist/src/index.js",
    "start:dev": "tsc-watch --onSuccess ",
    "test": "npm run build && mocha --exit --recursive dist/test/unit",
    "test:integration": "npm run build && mocha --exit --recursive dist/test/integration",
    "test:all": "npm run build && mocha --exit --recursive dist/test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "async": "^2.6.1",
    "bcryptjs": "^2.4.3",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "knex": "^0.16.3",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-router": "^7.4.0",
    "moment": "^2.23.0",
    "mysql2": "^1.6.4",
    "pino": "^5.10.6"
  },
  "devDependencies": {
    "@types/async": "^2.0.50",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.1.7",
    "@types/joi": "^14.0.1",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/knex": "^0.15.1",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.1",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.37",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/pino": "^5.8.3",
    "@types/sinon": "^7.0.3",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "sinon": "^7.2.2",
    "supertest": "^3.3.0",
    "tsc-watch": "^1.0.31",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2"
  }
}
